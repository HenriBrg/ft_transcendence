<div id="checkRoomPresence"></div>

<h1>{{titleText}}</h1>

<form id="{{formID}}" action="/api/rooms.json" accept-charset="UTF-8" method="{{method}}">
	
	<input type="hidden" name="authenticity_token" value="{{token}}">

	{{!-- Room Data --}}
	<label for="roomName">Room name</label>
	<input type="text" id="roomName" name="room[name]">
	<input type="hidden" id="roomOwner" name="room[owner_id]" value="{{user.id}}">
	<br><br>
	<label for="roomPrivacy">Room Privacy</label>
	<input type="text" id="roomPrivacy" name="room[privacy]" value="public">
	<br><br>
	<label for="roomPassword">Room Password if private</label>
	<input type="text" id="roomPassword" name="room[password]">

	<br>	<br><br>
	<input type="submit" value="{{submitText}}">
	<br>
</form>

<br>
<a class="btn btn-primary" href="#room" role="button"> Back </a>
