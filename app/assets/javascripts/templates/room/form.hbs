<div id="checkRoomPresence"></div>


<div class="newFormView">
	<label class="sized-text fifties blk-text"> <u> {{titleText}}</u>  </label>

	<form id="{{formID}}" action="/api/rooms.json" accept-charset="UTF-8" method="{{method}}">

		<input type="hidden" name="authenticity_token" value="{{token}}">

		<input class="form-control" placeholder="Room Name" autocomplete="off" type="text" id="roomName" name="room[name]">
		<input type="hidden" id="roomOwner" name="room[owner_id]" value="{{user.id}}">
		

		<br>
		&nbsp;
		<label class="form-check-label" for="exampleCheck1"> 🔐 &nbsp; Should this room be private ? </label> &nbsp;&nbsp;
		<input style="margin-left: 10px;" type="checkbox" class="form-check-input" name="room[privacy]" id="roomPrivacy">
		<br><br>

		<input id="togglePasswordField" style="display: none;" class="form-control" placeholder="Room Password" autocomplete="off" type="text"  name="room[password]">

		<br> <br>
		<input type="submit" class="btn btn-success btn-lg btn-block fifties" value="{{submitText}}">

		<br>
	</form>
</div>