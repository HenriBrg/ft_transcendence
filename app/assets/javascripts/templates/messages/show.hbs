<div id="checkChatPresence"></div>
<div id="userID" value="{{currentUser.id}}"></div>

<div class="container">
    <div class="row">
        <div class="col" style="justify-content: center;">
            <br>
            <a class="btn btn-primary" href="#messages" role="button"> Back </a>
            <br>
            <br>
            <div class="sectionTitle"> <strong>Send a message</strong> </div><br>
            <form id="sendRoomMessageForm" action="/api/chat_messages.json" accept-charset="UTF-8"
                method="POST">
                <input type="hidden" name="authenticity_token" value="{{token}}">
                {{!-- Room Data --}}
                <input class="form-control" placeholder="Message" type="text" id="message" name="chat_message[message]">
                <input type="hidden" id="roomOwner" name="chat_message[from_id]" value="{{currentUser.id}}">
                <input type="hidden" id="roomID" name="chat_message[direct_chat_id]" value="{{chatID}}">
                <br>
                <input class="btn btn-success" type="submit" value="Send">
                <br>
            </form>

        </div>
    </div>

<br><br>
    <div class="container">
        <div class="row">
            <div class="col">

                <ul class="list-group">

                    {{!-- <div class="chat" data-channel-subscribe="room" data-room-id="{{currentDMRoom.id}}"> --}}
                        {{#each directMessages}}

                        {{#when from_id "noteq" ../currentUser.id}}
                        <li style="background-color:lightskyblue" class="list-group-item">

                            <div class"otherMessage">
                                <img src="{{../otherUser.image}}"
                                    alt="Avatar" class="avatar">

                                <div style="min-width: 60px; display: inline-block">
                                    <a style="display: inline-block;"
                                        href="#profiles/ {{../otherUser.id}}">
                                        {{../otherUser.nickname}}
                                    </a>

                                </div>

                                <p style="display: inline; font-style: italic" data-role="message-text">
                                    {{message}}
                                </p>
                            </div>

                        </li>
                        <br>
                        {{/when}}

                        {{#when from_id "eq" ../currentUser.id}}
                        <li style="background-color: #fffdd0;" class="list-group-item">

                            <div class"ownMessage">
                                <img src="{{../currentUser.image}}" alt="Avatar" class="avatar">

                                <div style="min-width: 60px; display: inline-block">
                                    You
                                </div>

                                <p style="display: inline; font-style: italic" data-role="message-text">
                                    {{message}}
                                </p>
                            </div>

                        </li>
                        <br>
                        {{/when}}

                        {{/each}}
                    {{!-- </div> --}}

                </ul>


            </div>
        </div>
    </div>

</div>