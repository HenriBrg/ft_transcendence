<div class="margin25Div">

	<p class="" style="font-size: 24px;"> <strong> Your Friends ðŸ˜ƒ </strong> </p><br>

	<div id="onlineInfos">online infos</div>

	<hr><br>

	<p style="font-size: 20px;"> <strong> Friend Requests </strong> </p><br>

	<ul class="list-group">
		{{#each user.invites}}
		<li class="list-group-item">
			<strong> {{nickname}} </strong> :
			&nbsp;
			<span class="clickToAcceptFriend pointer btn btn-success">
				ACCEPT
				<span class="nodisplay">{{id}}</span>
			</span>
			&nbsp;
			<span class="clickToRejectFriend pointer btn btn-danger">
				REJECT
				<span class="nodisplay">{{id}}</span>
			</span>
		</li>
		{{/each}}
	</ul>

	<hr><br>

	<p style="font-size: 20px;"> <strong> Add Friends </strong> </p>

	<input class="form-control inp" autocomplete="off" type="text" name="" id="addFriend"><br>
	<div id="userInputFriends"></div>

	<form style="display: none;" id="friendsForm" method="POST">
		<input type="hidden" name="authenticity_token" value="{{token}}">
		<input type="text" name="id" id="friendIDField">
	</form>
	<br>
	<br>
	<a class="btn btn-info btn-lg btn-block" href="#">Home</a>

</div>